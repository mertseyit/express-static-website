<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Panel</title>
  <link rel="stylesheet" href="../../css/admin.quill.snow.css">
  <link rel="stylesheet" href="../../css/admin.main.css">
  <link rel="stylesheet" href="../../css/admin.fontawesome.all.min.css">
</head>

<body>
  <%- include('partials/navbar') %>

    <div class="flex-content">
      <%- include('partials/sidebar') %>

        <main class="container main-calculated">
          <div class="pagination">
            <a href="/admin/home" class="text-primary">
              <i class="fa-solid fa-house fs-16"></i>
            </a>
            <span class="fs-18">/</span>
            <a href="/admin/testimonials" class="text-primary fs-14">
              Testimonials
            </a>
            <span class="fs-18">/</span>
            <span class="current-page fw-bold fs-14">Add Testimonial</span>

          </div>

          <div class="content-box fs-14 shadow">
            <div class="content-header">
              <h4 class="content-title fs-16">Add Testimonial</h4>
            </div>
            <div>
              <form action="/blog/share-testimonial" method="post">
                <div class="form-input thumnail-image">
                  <label for="person_image" class="text-primary">Person Image</label>
                  <input type="file" name="person_image" id="preview_img" accept="image/png, image/gif, image/jpeg">
                </div>
                <div class="form-input">
                  <label for="person_full_name" class="text-primary">Person Full Name</label>
                  <input type="text" name="person_full_name" id="person_full_name">
                </div>

                <div class="form-input">
                  <label for="testimonial_text" class="text-primary">Testimonial Text</label>
                  <div id="editor">
                  </div>
                </div>
                <div class="form-input">
                  <label for="testimonial_rate" class="text-primary">Testimonial Rate</label>
                  <div class="stars">
                    <input type="radio" id="star5" name="testimonial_rate" value="5" />
                    <label for="star5" title="5 yıldız"></label>
                    <input type="radio" id="star4" name="testimonial_rate" value="4" />
                    <label for="star4" title="4 yıldız"></label>
                    <input type="radio" id="star3" name="testimonial_rate" value="3" />
                    <label for="star3" title="3 yıldız"></label>
                    <input type="radio" id="star2" name="testimonial_rate" value="2" />
                    <label for="star2" title="2 yıldız"></label>
                    <input type="radio" id="star1" name="testimonial_rate" value="1" />
                    <label for="star1" title="1 yıldız"></label>
                  </div>
                </div>
                <div class="divider"></div>
                <button onclick="questionAndActionAlert(() => {console.log('Shared !')})" type="button"
                  class="submit-btn fs-14">
                  <i class="fa-solid fa-check"></i>
                  Share
                </button>
              </form>
            </div>
          </div>
        </main>
    </div>
    <script src="../../js/admin.main.js"></script>
    <script src="../../js/admin.quill.js"></script>
    <script src="../../js/admin.sweetalert.js"></script>
    <script src="../../js/admin.customSweetAlert.js"></script>
    <script>
      const quill = new Quill('#editor', {
        theme: 'snow',
        placeholder: 'Start writing testimonial here or paste',

      });
    </script>
</body>

</html>