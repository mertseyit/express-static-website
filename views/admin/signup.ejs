<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Panel</title>
  <link rel="stylesheet" href="/css/admin.main.css">
  <link rel="stylesheet" href="/css/admin.fontawesome.all.min.css">
</head>

<body>
  <main class="login-page">
    <div class="login-card shadow">
      <form action="/admin/signup">
        <h4 class="text-center fs-20 fw-bold">Signup</h4>
        <div class="divider"></div>
        <div class="form-input">
          <label for="firstname" class="text-primary fs-14">Firstname</label>
          <input type="text" name="firstname" id="firstname">
        </div>
        <div class="form-input">
          <label for="lastname" class="text-primary fs-14">Lastname</label>
          <input type="text" name="lastname" id="lastname">
        </div>
        <div class="form-input">
          <label for="email" class="text-primary fs-14">Email</label>
          <input type="email" name="email" id="email">
        </div>
        <div class="form-input">
          <label for="password" class="text-primary fs-14">Password</label>
          <div class="password-input-show-hide-btn">
            <input type="password" name="password" id="password">
            <button id="password-show-hide-btn" type="button">
              <i class="fa-solid fa-eye"></i>
            </button>
          </div>
        </div>
        <div class="form-input">
          <label for="confirm-password" class="text-primary fs-14">Confirm Password</label>
          <div class="password-input-show-hide-btn">
            <input type="password" name="confirm-password" id="confirm-password">
          </div>
        </div>
        <div class="login-informations">
          <button type="button" onclick="signUp()" class="signin-button">Singup</button>
          <span class="fs-12">or</span>
          <a href="/admin/signin" class="auth-redirect">Signin</a>
        </div>
      </form>
    </div>
  </main>
  <script src="js/admin.main.js"></script>
  <script src="js/admin.requests.js"></script>
  <script src="js/admin.sweetalert.js"></script>
  <script src="js/admin.customSweetAlert.js"></script>
  <script>
    const showHideBtn = document.getElementById('password-show-hide-btn')
    const passwordInput = document.getElementById('password')
    showHideBtn.addEventListener('click', () => {
      if (passwordInput.type === 'password') {
        passwordInput.type = 'text'
        showHideBtn.innerHTML = '<i class="fa-solid fa-eye-slash"></i>'
      } else {
        passwordInput.type = 'password'
        showHideBtn.innerHTML = '<i class="fa-solid fa-eye"></i>'
      }
    })
  </script>

</body>

</html>